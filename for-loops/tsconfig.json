{
    "compilerOptions": {
      "target": "es6",                          // Target ECMAScript version
      "module": "commonjs",                     // Module code generation
      "strict": true,                           // Enable all strict type-checking options
      "esModuleInterop": true,                  // Enable compatibility with CommonJS modules
      "skipLibCheck": true,                     // Skip type checking of declaration files
      "forceConsistentCasingInFileNames": true, // Ensure consistent casing in file names
      "outDir": "./dist",                       // Output directory for compiled JS files
      "rootDir": "./src",                       // Root directory of your TS files
      "sourceMap": true                         // Generates corresponding .map file
    },
    "include": ["src/**/*.ts"],                 // Include all TS files in the src directory
    "exclude": ["node_modules"]                 // Exclude node_modules directory
  }
  